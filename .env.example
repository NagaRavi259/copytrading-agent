# testnet or mainnet
HYPERLIQUID_ENVIRONMENT=testnet

# Public wallet address of the leader you want to copy
LEADER_ADDRESS=0xleader...

# Private key used by the follower (API agent key)
FOLLOWER_PRIVATE_KEY=0xabc...

# Follower vault address (optional — leave commented if not using a vault)
FOLLOWER_VAULT_ADDRESS=0xvault...

# Public wallet address holding funds (USDC)
FOLLOWER_PUBLIC_ADDRESS=0xacbd...

# COPY_MODE options:
#   exact → mirror trades 1:1 (ignores equity differences)
#   ratio → use COPY_RATIO logic
COPY_MODE=ratio  # exact

# Trade size multiplier relative to leader equity
COPY_RATIO=0.5

# Maximum allowable leverage
MAX_LEVERAGE=5

# Maximum notional USD per position
MAX_NOTIONAL_USD=100000

# Maximum slippage in basis points (25 = 0.25%)
MAX_SLIPPAGE_BPS=25

# How often to run full safety reconciliation (ms)
RECONCILIATION_INTERVAL_MS=60000

# How often to refresh account data (ms)
REFRESH_ACCOUNT_INTERVAL_MS=5000

# Combine multiple small fills into a single log line
AGGREGATE_FILLS=true

# Log level: debug | info | warn | error
LOG_LEVEL=info
